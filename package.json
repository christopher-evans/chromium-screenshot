{
  "name": "chromium-screenshot",
  "version": "1.0.0",
  "description": "Screenshot server using Chromium and Puppeteer",
  "keywords": [
    "screenshot",
    "chromium",
    "server",
    "puppeteer"
  ],
  "homepage": "https://github.com/christopher-evans/chromium-screenshot",
  "bugs": {
    "url": "https://github.com/christopher-evans/chromium-screenshot/issues",
    "email": "cmevans@tutanota.com"
  },
  "license": "MIT",
  "author": {
    "name": "Christopher Evans",
    "email": "cmevans@tutanota.com",
    "url": "https://github.com/christopher-evans"
  },
  "main": "app/cluster.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/christopher-evans/chromium-screenshot.git"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "docs": "mkdocs build",
    "lint": "eslint .",
    "start": "node app/cluster.js",
    "test": "nyc mocha --recursive"
  },
  "config": {
    "chrome": "--disable-dev-shm-usage",
    "log": {
      "console": {
        "enable": "1",
        "level": "debug"
      },
      "file": {
        "enable": "1",
        "level": "debug",
        "path": "log/app.log"
      }
    },
    "queue_concurrency": 32,
    "server": {
      "backlog": 511,
      "body_max_size": "56kb",
      "host": "127.0.0.1",
      "port": 3000
    },
    "worker": {
      "concurrency": 8,
      "discard_timeout": 2000,
      "respawn_wait": 500
    }
  },
  "dependencies": {
    "koa": "^2.6.2",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "node-statsd": "^0.1.1",
    "p-queue": "^3.0.0",
    "puppeteer": "^1.10.0",
    "sanitize-html": "^1.19.1",
    "valid-url": "^1.0.9",
    "validate-ip-node": "^1.0.6",
    "winston": "^3.1.0",
    "winston-transport": "^4.2.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".js"
    ],
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  }
}
